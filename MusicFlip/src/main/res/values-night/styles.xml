<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/darkColorAccent</item>

        <item name="floatingActionButtonStyle">@style/AppButton</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="customColorValue">@color/white</item>

        <item name="android:colorControlHighlight">@color/colorControlHighlight</item>
    </style>

    <style name="AppButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/darkColorAccent</item>
    </style>

</resources>
