<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/darkColorAccent</item>

        <item name="floatingActionButtonStyle">@style/AppButton</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="customColorValue">@color/white</item>
    </style>

    <style name="LightTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="customColorValue">@color/white</item>
    </style>

    <style name="DarkTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/darkColorAccent</item>

        <item name="customColorValue">@color/white</item>
        <item name="android:background">@color/backgroundBlack</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="bottomNavigationStyle">@style/AppBottomNavigation</item>
        <item name="android:textColorSecondary">@color/lightGrey</item>
        <item name="floatingActionButtonStyle">@style/AppButton</item>

        <item name="alertDialogTheme">@style/MaterialDialogAlert</item>
        <item name="materialAlertDialogTheme">@style/MaterialDialogAlert</item>
    </style>

    <style name="AppBottomNavigation" parent="@style/Widget.MaterialComponents.BottomNavigationView.Colored" />

    <style name="AppButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/darkColorAccent</item>
    </style>

    <style name="MaterialDialogAlert" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:textColorPrimary">@color/lightGrey</item>
    </style>

</resources>
